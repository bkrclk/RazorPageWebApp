@page
@model RazorPageWebApp.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form method="post" asp-page-handler="Signin">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">

                    <input asp-for="UserModel.UserName" class="form-control" placeholder="username" />
                    <span asp-validation-for="UserModel.UserName" class="text-danger"></span>

                </div>
                <div class="form-group">

                    <input type="password" asp-for="UserModel.Password" class="form-control" placeholder="password" />
                    <span asp-validation-for="UserModel.Password" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-success" asp-page-handler="Signin">Login</button>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </div>
                </div>
            </form>



        </div>
        <div class="col-md-4"></div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
